<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/layoutErrorConection"
    android:background="@android:color/white" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3">

        <com.caminosantiago.socialway.views.TextViewAwesome
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:layout_marginRight="10dp"
            android:text="@string/fa_times_circle"
            android:textColor="@color/blue"
            android:id="@+id/textView6"
            android:layout_gravity="center_vertical" />

        <com.caminosantiago.socialway.views.TextViewCookie
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Ups!!"
            android:id="@+id/textView7"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <com.caminosantiago.socialway.views.TextViewRoboto
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/no_conect_touch_try_again"
        android:textColor="@color/blue"
        android:layout_margin="15dp"
        android:gravity="center"
        android:id="@+id/textView8"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>