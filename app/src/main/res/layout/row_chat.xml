<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layoutTextOther"
        android:layout_marginRight="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.caminosantiago.socialway.views.TextViewAwesome
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="@string/fa_backward"
                android:id="@+id/textView21"
                android:textColor="@android:color/white"/>


            <TextView
                android:text=""
                android:background="@drawable/rounded_chat"
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="#000000">
            </TextView>



        </LinearLayout>

        <TextView
            android:id="@+id/textViewDateOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="Text"
            android:textColor="@android:color/black"
            android:layout_marginTop="3dp"
            android:layout_gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:id="@+id/layoutText"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_chat"
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView22">
            </TextView>


            <com.caminosantiago.socialway.views.TextViewAwesome
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:text="@string/fa_caret_right"
                android:id="@+id/textView22"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Text"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:layout_gravity="left"
                android:layout_below="@+id/value"
                android:layout_alignLeft="@+id/value"
                android:layout_alignStart="@+id/value" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>