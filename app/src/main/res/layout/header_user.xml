<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#fff"
        android:weightSum="1">


        <ImageView
            android:id="@+id/ImageViewHeader"
            android:src="@drawable/img_default"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View
            android:background="@color/whiteTransparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView14"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView" />

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="#ffffff"
            android:id="@+id/iconUser"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/default_avatar"
            android:layout_marginBottom="-5px"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="26dp"
            android:layout_above="@+id/textViewEstadoUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="Nombre"
            android:layout_marginRight="10dp"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/textView"
            android:textColor="@android:color/black"
            android:layout_alignBottom="@+id/iconUser"
            android:layout_alignLeft="@+id/textViewEstadoUser"
            android:layout_alignStart="@+id/textViewEstadoUser"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <com.caminosantiago.socialway.views.TextViewRoboto
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Estado"
            android:lines="1"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textViewEstadoUser"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iconUser"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.caminosantiago.socialway.views.ButtonAwesome
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_border_blue"
            android:textColor="@android:color/darker_gray"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:text="@string/fa_user_plus"
            android:id="@+id/button3" />

        <com.caminosantiago.socialway.views.ButtonAwesome
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_border_blue"
            android:textColor="@color/blue"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="25sp"
            android:text="@string/fa_comments_o"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>


