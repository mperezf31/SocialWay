<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_marginTop="250dp"
    android:paddingTop="30dp"
    android:paddingBottom="15dp"
    android:id="@+id/layoutNoPublications"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3">

        <com.caminosantiago.socialway.views.TextViewAwesome
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:layout_marginRight="10dp"
            android:text="@string/fa_upload"
            android:textColor="@color/blue"
            android:id="@+id/textView6"
            android:layout_gravity="center_vertical" />

        <com.caminosantiago.socialway.views.TextViewCookie
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="@string/app_name"
            android:id="@+id/textView7"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <com.caminosantiago.socialway.views.TextViewRoboto
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/user_no_publications"
        android:textColor="@color/blue"
        android:layout_margin="15dp"
        android:gravity="center"
        android:id="@+id/textView8"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true" />
</LinearLayout>