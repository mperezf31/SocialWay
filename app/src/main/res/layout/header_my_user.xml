<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageView
            android:id="@+id/ImageViewHeader"
            android:src="@drawable/img_default"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

    <View
        android:background="@color/whiteTransparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView14"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView" />


    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
            android:id="@+id/iconUser"
            android:padding="15px"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/default_avatar"
            android:layout_marginBottom="-5px"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="26dp"
            android:layout_above="@+id/textViewEstadoUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="Nombre"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/textView"
            android:textColor="@android:color/black"
            android:layout_alignBottom="@+id/iconUser"
            android:layout_alignLeft="@+id/textViewEstadoUser"
            android:layout_alignStart="@+id/textViewEstadoUser"
            android:layout_toStartOf="@+id/view"
            android:layout_toLeftOf="@+id/view" />

        <com.caminosantiago.socialway.views.TextViewRoboto
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Estado"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textViewEstadoUser"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iconUser"
            android:layout_toStartOf="@+id/view"
            android:layout_toLeftOf="@+id/view" />

        <com.caminosantiago.socialway.views.TextViewAwesome
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/fa_pencil_square_o"
            android:textColor="@color/blue"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    <com.caminosantiago.socialway.views.TextViewAwesome
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blue"
        android:text="@string/fa_pencil_square_o"
        android:id="@+id/textView5"
        android:layout_margin="5dp"
        android:layout_alignTop="@+id/iconUser"
        android:layout_alignRight="@+id/iconUser"
        android:layout_alignEnd="@+id/iconUser" />


    <com.caminosantiago.socialway.views.TextViewAwesome
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/fa_pencil_square_o"
        android:textColor="@color/blue"
        android:padding="10dp"
        android:id="@+id/view"
        android:layout_alignBottom="@+id/textViewEstadoUser"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>



